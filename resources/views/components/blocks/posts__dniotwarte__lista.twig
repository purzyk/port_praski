<section class="home__noweInwestycje --dniotwarte">
	<div class="l-wrapper">
		<div class="slider__header">
			<h3 data-aos="fade-up" data-aos-duration="800" class="fnt20 home__noweInwestycje__title">Dni otwarte</h3>
			<div class="slider__header__buttons">
				<p class="fnt12">zobacz więcej</p>
				<button class="circle --white slider__header__button arrow__left__dni"><img src="{{Image(options.arrow_up).src}}"></button>
				<button class="circle --white slider__header__button arrow__right__dni"><img src="{{Image(options.arrow_up).src}}"></button>
			</div>
		</div>
	</div>
	<div class="slider-wrapper">
		<div class="wrapFullWidth --left" data-aos="fade-up" data-aos-delay="140">
			<div class="home__noweInwestycje__wrapp js-dniotwarte --CustomButtons">
				{% for item in dniotwarteLoop %}
					<div class="home__noweInwestycje__item">
						{% include 'components/generic/image.twig'  with { img_src:Image(item.thumbnail).src, width:580, height:440 } %}
						<div class="home__noweInwestycje__item__inside">
							<a href="{{item.link}}">
								<h5 class="fnt30">{{item.title}}</h5>
							</a>
							<p>
								<a href="{{item.link}}">{{item.preview.read_more('')}}</a>
							</p>
							<div class="home__noweInwestycje__item__socials">
								<figure class="circle">
									<a target="_blank" href="">
										<svg width="18" height="18" viewbox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M17 12.5C15.75 12.5 14.55 12.3 13.43 11.93C13.08 11.82 12.69 11.9 12.41 12.17L10.21 14.37C7.38 12.93 5.06 10.62 3.62 7.78L5.82 5.57C6.1 5.31 6.18 4.92 6.07 4.57C5.7 3.45 5.5 2.25 5.5 1C5.5 0.45 5.05 0 4.5 0H1C0.45 0 0 0.45 0 1C0 10.39 7.61 18 17 18C17.55 18 18 17.55 18 17V13.5C18 12.95 17.55 12.5 17 12.5ZM16 9H18C18 4.03 13.97 0 9 0V2C12.87 2 16 5.13 16 9ZM12 9H14C14 6.24 11.76 4 9 4V6C10.66 6 12 7.34 12 9Z" fill="#262359"/>
										</svg>

									</a>
								</figure>
								<figure class="circle">
									<a target="_blank" href="">
										<svg width="20" height="16" viewbox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M18 0H2C0.9 0 0.00999999 0.9 0.00999999 2L0 14C0 15.1 0.9 16 2 16H18C19.1 16 20 15.1 20 14V2C20 0.9 19.1 0 18 0ZM18 14H2V4L10 9L18 4V14ZM10 7L2 2H18L10 7Z" fill="#262359"/>
										</svg>

									</a>
								</figure>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<a class="btn --mobile" href="">Zobacz więcej</a>
		</div>
	</div>
</section>
