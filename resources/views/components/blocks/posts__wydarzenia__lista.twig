<section class="home__noweInwestycje --wydarzenia">
	<div class="l-wrapper">
		<div class="slider__header">
			<h3 data-aos="fade-up" data-aos-duration="800" class="fnt20 home__noweInwestycje__title">Wydarzenia</h3>
			<div class="slider__header__buttons">
			{% if wydarzeniaLoop|length > 0 %}
				<p class="fnt12">
					<a href="{{options.zobacz_wiecej_wydarzenia_url}}">zobacz więcej</a>
				</p>
			
				<button class="circle --white slider__header__button arrow__left__nag arrow__left"><img src="{{Image(options.arrow_up).src}}"></button>
				<button class="circle --white slider__header__button  arrow__right__nag arrow__right"><img src="{{Image(options.arrow_up).src}}"></button>
			{% endif %}
			</div>
			
		</div>
	</div>

	<div class="wrapFullWidth --right" data-aos="fade-up" data-aos-delay="140">
		<div class="home__noweInwestycje__wrapp js-nagrody --CustomButtons">
			{% for item in wydarzeniaLoop %}
				<div class="home__noweInwestycje__item">
				{% include 'components/generic/image.twig'  with { img_src:Image(item.thumbnail).src, width:580, height:440 } %}
					<div class="home__noweInwestycje__item__inside">
						<a href="{{item.link}}">
							<h4 class="fnt12">
								{{item.date | date('d.m.Y')}}
							</h4>
							<h5 class="fnt30 events-event-title">{{item.title}}</h5>
						</a>
						<p class="events-read-more">
							<a href="{{item.link}}" class="btn btn--force-visible --lightGrey" >Czytaj więcej</a>
						</p>

					</div>
				</div>
			{% endfor %}
			{% if wydarzeniaLoop|length == 0 %}
				<h5 class="fnt30">
					AKTUALNIE BRAK PLANOWANYCH WYDARZEŃ
				</p>
			{% endif %}
		</div>
		{% if wydarzeniaLoop|length > 0 %}
		<a class="btn --mobile" href="">Zobacz więcej</a>
		{% endif %}
	</div>

</section>
