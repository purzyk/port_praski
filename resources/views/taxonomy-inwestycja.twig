{% extends "base.twig" %}

{% block content %}
	<article class="inwestycja">
		<header class="header__paralax">
			<img src="{{Image(glowne_zdjecie).src}}">
			<div class="header__paralax__title">
				<figure class="circle">
					<a href="#start"><img src="{{Image(options.arrow_up).src}}"></a>
				</figure>
				<div class="header__paralax__title__copy">
					<h1>{{ title}}</h1>
					<h2>{{ slogan}}</h2>
				</div>
			</div>
		</header>
		<div class="l-wrapper">
			<div class="line" data-aos="width" data-aos-duration="800"></div>
			<h5 class="fnt20">
				{{ title}}

			</h5>
			<div class="single__article__wrap">

				<h2 class="fnt50">{{ lead }}</h2>
			</div>
			<div class="js-imagesHome2">
				<div class="splide">
					<div class="splide__track">
						<ul class="splide__list">
							{% for image in slider %}
								<li class="splide__slide">
									<img data-splide-lazy="{{Image(image.zdjecie).src}}">
								</li>
							{% endfor %}
						</ul>
					</div>
					<div class="splide__progress">
						<div class="splide__progress__bar"></div>
					</div>
				</div>

			</div>
			<div class="single__article__wrap">

				<p>{{ opis }}</p>

			</div>
		</div>
	</article>
	<div>
		znajd≈∫ lokal
	</div>
{% endblock %}
