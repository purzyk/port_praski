{% extends "base.twig" %}

{% block content %}
	<article class="main-article lokal">
		<div class="l-wrapper">
			<button class="goBack">Wróć do listy</button>
			<div class="lokal__wrapper">
				<div class="lokal__left">
					<div class="lokal__status">{{post.meta('status')}}</div>
					<h1 class="lokal__inwestycja">
						{% for item in inwestycja %}
							{{item.name}}
						{% endfor %}
					</h1>
					<h2 class="lokal__mieszkanie">{{post.name}}</h2>
					<div class="line double --grey"></div>
					{% if post.powierzchnia %}
						<div class="lokal__twoColumns">
							<h3>Powierzchnia:</h3>
							<p>{{post.powierzchnia}}
								m²</p>
						</div>
					{% endif %}
					{% if post.liczba_pokoi %}
						<div class="lokal__twoColumns">
							<h3>Liczba pokoi:</h3>
							<p>{{post.liczba_pokoi}}</p>
						</div>
					{% endif %}

					<div class="lokal__twoColumns">
						<h3>Piętro:</h3>
						<p>{{post.pietro}}</p>
					</div>

					{% if post.meta('status') %}
						<div class="lokal__twoColumns">
							<h3>Status:</h3>
							<p>{{post.meta('status')}}</p>
						</div>
					{% endif %}
					{% if dodatkowo %}
						<div class="lokal__twoColumns --last --dodatkowo">
							<h3>dodatkowo:</h3>
							<p>
								{% for item in dodatkowo %}
									<span>{{item.name}}</span>
								{% endfor %}
							</p>
						</div>
					{% endif %}
					<div class="line double --grey"></div>
					<div class="lokal__btns">
						<button class="btn" id="contactButton">prośba o kontakt</button>
						<a target="_blank" href="{{pdf}}" class="btn --lightGrey">pobierz PDF</a>
					</div>
				</div>

				<div class="lokal__right">
					<div class="slider-lokal">
						{% for item in post.meta('galeria') %}
							<a class="image-link " href="{{Image(item.zdjecie).src}}">
								<img src="{{Image(item.zdjecie).src}}">
							</a>
						{% endfor %}

					</div>

					<!-- THUMBNAILS -->
					<div class="slider-nav-lokal-thumbnails">
						{% for item in post.meta('galeria') %}
							<div><img src="{{Image(item.zdjecie).src}}"></div>
						{% endfor %}

					</div>
				</div>

			</div>
		</article>

			  <div class="modal micromodal-slide contact-modal" id="contact-modal" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
      <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
        <div class="modal__header">
			<p class="contact-modal-title">W SPRAWIE OFERTY PROSIMY O KONTAKT</p>
          <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
        </div>
        <div class="modal__content" id="modal-1-content">
          	{% filter shortcodes %}
					{{options.contact_form_shordcode}}
				{% endfilter %}
        </div>
      </div>
    </div>
  </div>

	{% endblock %}
